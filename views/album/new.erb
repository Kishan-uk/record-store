<form method="post" action="/album">
  <label for="artist_id">Artist: </label>
  <select name="artist_id">
    <% @artists.each do |artist| %>
<option value="<%= artist.id %>"><%= artist.name %> </option>
    <% end %>
  </select>
  <label for="title">Title: </label>
  <input id="title" type="text" name="title" required="required" min="0"/>

  <label for="genre">Genre: </label>
  <input id="genre" type="text" name="genre" required="required" min="0"/>

  <label for="quantity">Quantity: </label>
  <input id="quantity" type="number" name="quantity" required="required" min="0"/>

  <label for="buy_price">Buy price: £</label>
  <input id="buy_price" type="number" name="buy_price" required="required"
  min="0" step="0.01" onchange="setTwoNumberDecimal" value="0.00"/>

  <label for="sell_price">Sell price: £</label>
  <input id="sell_price" type="number" name="sell_price" required="required"
   min="0" step="0.01" onchange="setTwoNumberDecimal" value="0.00"/>

  <input type="submit" value="Add album" />

</form>
